<head>
    <link href="~/css/articles_page.css" rel="stylesheet" />
</head>

@foreach (var item in Model.LatestModified)
{<div class="full-wrapper">
        <div class="inner-wrapper">
            <div class="article-preview">
                <div class="article-date"> <h2> <a href='~/ArticleManage/ArticleRead?id=@item.Id'> @item.Name </a></h2></div>
                <div style="width:100%">

                    <h4 class="article-h1">@Localizer["LastModife"] @item.LastModifeDate </h4>

                    <div style="display: inline-block; " id='@item.Id'></div>
                </div>

                <p class="article-p">  @item.Description</p>
                <div class="article-breaker">
                </div>
            </div>
        </div>
    </div>
}