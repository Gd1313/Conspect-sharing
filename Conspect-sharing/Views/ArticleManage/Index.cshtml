@using Conspect_sharing.Models.ViewModels;
@model ArticleData
@inject UserManager<ApplicationUser> UserManager
<head>
    <link href="~/css/bootstrap-tagsinput.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
</head>
<ul style="margin-top:30px;">
    <li>
        <label for="username">@Localizer["UserName"]</label>
        <a href="#" id="username" data-type="text" data-pk="@Model.UserId" data-name="username" data-url="/ArticleManage/ChangeUserName" >
            @Model.UserName
        </a>
    </li>
    <li><a asp-area="" asp-controller="ArticleManage" asp-route-userId="@UserManager.GetUserId(User)" asp-action="Article">@Localizer["Create"]</a></li>
    <li><a asp-area="" asp-controller="ArticleManage" asp-action="ArticleTable">@Localizer["ArticleTable"]</a></li>
</ul>
<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<script src="~/js/site.js"></script>
