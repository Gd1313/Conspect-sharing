@model IEnumerable<Conspect_sharing.Models.ViewModels.ArticleListViewModel>

@{
    ViewData["Title"] = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/articles_page.css" rel="stylesheet" />
</head>

@if (Model.Count() == 0)
{
    <H3>@Localizer["ResultNotFound"]</H3>

}
@foreach (var item in Model)
{
    <div class="full-wrapper">
        <div class="inner-wrapper">
            <div class="article-preview">
                <div class="article-date"> <h2> <a href='~/ArticleManage/ArticleRead?id=@item.Id'> @item.Name </a></h2></div>
                <div style="width:100%">

                    <h3 class="article-h1"> @item.LastModifeDate </h3>

                    <div style="display: inline-block; " id='@item.Id'></div>
                </div>

            <p class="article-p">  @item.Description</p>
            <div class="article-breaker">
            </div>
                </div>
        </div>
    </div>

}